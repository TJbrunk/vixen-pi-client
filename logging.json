{
   "version": 1,
   "formatters": {
      "simple": {
         "format": "%(name)s - %(lineno)d -  %(message)s"
      },
      "complex": {
         "format": "%(asctime)s - %(name)-8s - %(lineno)d - %(levelname)-8s %(message)s"
      }
   },
   "handlers": {
      "console": {
         "class": "logging.StreamHandler",
         "level": "DEBUG",
         "formatter": "complex"
      },
      "file": {
         "class": "logging.handlers.TimedRotatingFileHandler",
         "when": "midnight",
         "backupCount": 6,
         "level": "DEBUG",
         "formatter": "simple",
         "filename": ".\\logs\\debug.log"
      }
   },
   "loggers": {
      "config": {
         "level": "DEBUG",
         "handler": [
            "console",
            "file"
         ],
         "propagate": "yes"
      },
      "channel": {
         "level": "DEBUG",
         "handlers": [
            "console",
            "file"
         ],
         "propagate": "yes"
      },
      "__main__": {
         "level": "DEBUG",
         "handlers": [
            "console",
            "file"
         ],
         "propagate": "yes"
      }
   }
}